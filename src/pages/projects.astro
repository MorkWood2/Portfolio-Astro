---
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = 'Projects';
---

<BaseLayout pageTitle={pageTitle}>
  <div class='grid md:grid-cols-4 md:grid-rows-4 gap-4 h-60'>
    <div
      class='md:col-span-2 md:row-span-4 col-span-4 row-span-2 border border-zinc-300 p-3 rounded-2xl group hover:animate-icon'
    >
      <div class='flex'>
        <div class='w-40'>
          <img
            src='/icons/github-icon.svg'
            alt='GitHub Icon'
            class='w-8 h-9 pb-1'
          />
          <p>Prompt Share</p>
          <div class='flex items-baseline justify-between flex-col md:gap-24'>
            <p class='text-xs text-zinc-500 pb-3 md:pb-0'>
              AI prompt repository
            </p>
            <a
              href='https://github.com/MorkWood2/covid-tracker'
              class='text-sm border border-zinc-300 py-1 px-2 md:mt-3 rounded-md bg-slate-50 transition duration-300 shadow hover:shadow-md'
            >
              Star
            </a>
          </div>
        </div>

        <div class='mx-auto my-auto'>
          <img
            src='/icons/prompt-share-icon.svg'
            alt='project promptshare icon'
            class='md:w-32 md:h-32 w-20 h-20 transition-transform transform group-hover:rotate-45'
          />
        </div>
      </div>
    </div>

    <div class='col-span-2 row-span-2'></div>
    <div class='col-span-2 row-span-2 border border-zinc-300 p-3 rounded-2xl'>
      <img
        src='/icons/github-icon.svg'
        alt='GitHub Icon'
        class='w-8 h-9 pb-1'
      />
      <p>Covid Tracker</p>
      <div class='flex items-baseline justify-between'>
        <p class='text-xs text-zinc-500'>Data visualization</p>
        <a
          href='https://github.com/MorkWood2/covid-tracker'
          class='text-sm border border-zinc-300 py-1 px-2 rounded-md bg-slate-50 transition duration-300 shadow hover:shadow-md'
        >
          Star
        </a>
      </div>
    </div>
  </div>
</BaseLayout>
